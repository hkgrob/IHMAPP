
# Serve PDF files with the correct MIME type
<FilesMatch "\.pdf$">
  Header set Content-Type "application/pdf"
</FilesMatch>

# Enable directory browsing for attached_assets
<Directory "/attached_assets">
  Options +Indexes
  AllowOverride All
  Require all granted
</Directory>

# Handle 404 errors
ErrorDocument 404 /404.html
